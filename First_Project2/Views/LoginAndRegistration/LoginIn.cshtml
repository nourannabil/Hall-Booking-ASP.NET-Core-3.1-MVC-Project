@model First_Project2.Models.Login

@{
Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <link rel="apple-touch-icon" sizes="76x76" href="~/DashboardAssests/img/apple-icon.png">
  <link rel="icon" type="image/png" href="~/DashboardAssests/img//favicon.png">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <title>
    Hall Booking
  </title>
  <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no'
    name='viewport' />

  <link rel="canonical" href="https://www.creative-tim.com/product/paper-dashboard-2-pro" />

  <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">

  <!-- Start bootstrap icons V= 5.1-->
   <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css">
    <!-- Bootstrap Font Icon CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
 <!--End bootstrap icons V= 5.1-->

  <link href="~/DashboardAssests/css/bootstrap.min.css" rel="stylesheet" />
  <link href="~/DashboardAssests/css/paper-dashboard.min.css?v=2.0.1" rel="stylesheet" />
  <link href="~/DashboardAssests/demo/demo.css" rel="stylesheet" />

  <link href="~/css/LoginAndRegister.css" rel="stylesheet" />
  <link href="~/css/EditLoginAndRegister.css" rel="stylesheet" />

   
</head>

<body class="register-page">

  <!--Start Nav bar -->
  <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
    <div class="container">
      <div class="navbar-wrapper">
       
        <a asp-action="Home" asp-controller="Home" class="navbar-brand">HallBooking</a>
      </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation"
        aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-bar navbar-kebab"></span>
        <span class="navbar-toggler-bar navbar-kebab"></span>
        <span class="navbar-toggler-bar navbar-kebab"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navigation">
          <ul class="navbar-nav">
                <li class="nav-item active">
                    <a asp-action="Home" asp-controller="Home" class="nav-link">
                       <i class="bi bi-bank2"></i>
                        Home 
                    </a>
                </li>
                  
                <li class="nav-item ">
                    <a asp-action="Register" asp-controller="LoginAndRegistration" class="nav-link">
              <i class="nc-icon nc-book-bookmark"></i>
                        Register
                    </a>
                </li>
          </ul>
      </div>
    </div>
  </nav>
  <!--End Nav bar -->

  <!--start body-->
  <div class="wrapper wrapper-full-page ">
    <div class="full-page register-page">

         <img src="~/DashboardAssests/img/jan-sendereks.jpg"/>

      <div class="content">
        <div class="container">
          <div class="row">
            <div class="col-6 offset-3">
              <div class="card card-login">
                <div class="card-header ">
                  <h3 class="header text-center">Login</h3>
                </div>
                <div class="card-body ">
                  <form asp-action="LoginIn" class="form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group error">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="nc-icon nc-single-02"></i>
                          </span>
                        </div>
                        <input asp-for="UserName" class="form-control" type="text" placeholder="Username" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                      </div>
                    </div>
                     <div class="form-group error1">
                       <div class="input-group">
                         <div class="input-group-prepend">
                           <span class="input-group-text">
                             <i class="nc-icon nc-key-25"></i>
                           </span>
                         </div>
                         <input id="password" asp-for="Password" class="form-control" type="password" placeholder="Password"/>
                         <span asp-validation-for="Password" class="text-danger"></span>
                           
                           <i id="open" class="bi bi-eye-fill text-right position-absolute" style="right: 10px; top: 10px; cursor: pointer;"></i>
                           <i id="close" class="bi bi-eye-slash-fill text-right position-absolute " style="right: 10px; top: 10px; cursor: pointer; display:none;"></i>
                       </div>
                     </div>
                      <br />
                      <div class="form-group">
                        <div class="form-check">
                          <label class="form-check-label" for="RememberMe">
                            <input class="form-check-input" type="checkbox" id="RememberMe" name="RememberMe" value="true">
                            <span class="form-check-sign"></span>
                            Remember Me
                          </label>
                        </div>
                      </div>
                     <div class="form-group">
                       <div class="card-footer">
                         <input type="submit" value="Log In"
                          class="btn btn-warning btn-round btn-block mb-3 text-black-50" />
                       </div>
                     </div>

                    <div class="error-msg text-center">
                        <p style="color:red">
                            <span>@ViewData["message"] </span>
                        </p>
                    </div>

                    <div class="text-center pb-5">
                      <span>or </span>
                      <a asp-action="Register" asp-controller="LoginAndRegistration"> create an account</a>
                    </div>
                    <div class="text-center pb-5">
                      <p>or sign in with</p>
                      <div class="social">
                        <button class="btn btn-icon btn-round btn-twitter color">
                          <i class="fa fa-twitter"></i>
                        </button>
                        <button class="btn btn-icon btn-round btn-dribbble">
                          <i class="fa fa-dribbble"></i>
                        </button>
                        <button class="btn btn-icon btn-round btn-facebook">
                          <i class="fa fa-facebook-f"></i>
                        </button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>
       <!--Start Footer-->
            <footer class="footer footer-black  footer-white ">
                <div class="container-fluid">
                    <div class="row">
                        <div class="credits ml-auto">
                            <span class="copyright">
                                ©
                                <script>
                                    document.write(new Date().getFullYear())
                                </script> Hall Booking
                            </span>
                        </div>
                    </div>
                </div>
            </footer>
            <!--End Footer-->
        </div>
    </div>
    <!--java script code-->

    <script src="~/DashboardAssests/js/core/jquery.min.js "></script>
    <script src="~/DashboardAssests/js/core/popper.min.js"></script>
    <script src="~/DashboardAssests/js/core/bootstrap.min.js"></script>
    <script src="~/DashboardAssests/js/plugins/perfect-scrollbar.jquery.min.js"></script>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB2Yno10-YTnLjjn_Vtk0V8cdcY5lC4plU"></script>
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <script src="~/DashboardAssests/js/plugins/chartjs.min.js"></script>
    <script src="~/DashboardAssests/js/plugins/bootstrap-notify.js"></script>
    <script src="~/DashboardAssests/demo/demo.js"></script>
    

    <script src="~/js/Login.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

</body>

</html>
