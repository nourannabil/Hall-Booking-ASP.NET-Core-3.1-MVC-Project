
@model First_Project2.Models.HallPhoto

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<h3>Are you sure you want to delete this?</h3>
<div>
<h4>Feature</h4>
<hr />

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title m-5">Feature Details</h4>
                </div>
                <div class="card-body text-center">
                    <div class="row">
                        <div class="col-4">
                                <h5 class="font-weight-bold">
                                @Html.DisplayName("Category Name")
                            </h5>
                            <hr class="mb-5" />
                            <div class="font-weight-bold">
                                @Html.DisplayFor(model => model.Category.CategoryName)
                            </div>
                        </div>
                            <div class="col-4">
                                <h5 class="font-weight-bold">
                                    @Html.DisplayName("Hall Name")
                            </h5>
                            <hr class="mb-5" />
                            <div class="font-weight-bold">
                                    @Html.DisplayFor(model => model.Hall.Name)
                            </div>
                        </div>
                            <div class="col-4">
                                <h5 class="font-weight-bold">
                                @Html.DisplayName("Image")
                            </h5>
                            <hr class="mb-5" />
                            <div class="font-weight-bold">
                                <img src="@Url.Content("~/Images/" + Model.ImagePath)" style="border-radius:20%" width="100" height="100"/>
                            </div>
                        </div>
                    </div>
                        <div class="text-left m-5">
                        <a class="btn btn-info btn-icon btn-sm w-auto p-2 text-dark" asp-action="SeePhoto" asp-route-id="@Model.HallId">
                            Back to List
                        </a>
                        <a class="btn btn-success btn-icon btn-sm" asp-action="Edit" asp-route-id="@Model.Id">
                            <i class="fa fa-edit" style="font-size:15px"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
