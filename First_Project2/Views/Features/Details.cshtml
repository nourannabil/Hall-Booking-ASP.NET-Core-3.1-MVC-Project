@model First_Project2.Models.Feature

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}



<h4>Feature</h4>
<hr />

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title m-5">Feature Details</h4>
                </div>
                <div class="card-body text-center">
                    <div class="row">
                        <div class="col-4">
                                <h5 class="font-weight-bold">
                                @Html.DisplayName("Category Name")
                            </h5>
                            <hr class="mb-5" />
                            <div class="font-weight-bold">
                                @Html.DisplayFor(model => model.Category.CategoryName)
                            </div>
                        </div>
                            <div class="col-4">
                                <h5 class="font-weight-bold">
                                    @Html.DisplayName("Hall Name")
                            </h5>
                            <hr class="mb-5" />
                            <div class="font-weight-bold">
                                    @Html.DisplayFor(model => model.Hall.Name)
                            </div>
                        </div>
                            <div class="col-4">
                                <h5 class="font-weight-bold">
                                @Html.DisplayName("Feature")
                            </h5>
                            <hr class="mb-5" />
                            <div class="font-weight-bold">
                                @Html.DisplayFor(model => model.Feat)
                            </div>
                        </div>
                    </div>
                        <div class="text-left m-5">
                        <a class="btn btn-info btn-icon btn-sm w-auto p-2 text-dark" asp-action="SeeFeature" asp-route-id="@Model.HallId">
                            Back to List
                        </a>
                        <a class="btn btn-success btn-icon btn-sm" asp-action="Edit" asp-route-id="@Model.Id">
                            <i class="fa fa-edit" style="font-size:15px"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
  
