@model Tuple<IEnumerable<First_Project2.Models.HallPhoto>,IEnumerable<First_Project2.Models.Feature>>

@{
    ViewData["Title"] = "HallInformation";
    Layout = "~/Views/Shared/_TemplateLayout.cshtml";    
    var hallInfo = (IEnumerable<First_Project2.Models.Hall>)ViewBag.HInfo;
    var catInfo = (IEnumerable<First_Project2.Models.CategoryHall>)ViewBag.CatInfo;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="~/Assests/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500&family=Roboto:wght@500;700;900&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/Assests/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/Assests/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/Assests/lib/lightbox/css/lightbox.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/Assests/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/Assests/css/style.css" rel="stylesheet">
    
    <!-- the Editing Css StyleSheet -->
   <link href="~/Assests/css/Editings.css" rel="stylesheet">

    <!-- the font awesome library -->
    <link rel="stylesheet" href="~/css/iconCSS/all.min.css">

    <link rel="stylesheet" href="~/css/Popup.css">

     <style>
        .section-title h1::before,
        .section-title h1::after {
            display:none;
           position: unset;
        }
       .page-header {
            background: linear-gradient(rgba(53, 53, 53, .7), rgba(53, 53, 53, .7)), url(../../Assests/img/MyImages/Slider2.jpg) center center no-repeat;
            background-size: cover;
        }
    </style>
</head>

<body>
    <!-- HallMenu Start -->
<div class="container-xxl py-5 container-fluid bg-light">
    <div class="container">
        <div class="section-title text-left">
            <div class="display-5 mb-5">
                 @foreach(var item in catInfo )
                {
                    <h3> @item.CategoryName </h3>
                }
                
            </div>
            <div>
                @foreach(var item in hallInfo )
                {
                    <h1> @item.Name </h1>
                }
            </div>
        </div>
    </div>
</div> 

<!-- For images  -->
 <div class="container-xxl py-5 container-fluid bg-light">
    <div class="container">
        <div class="row g-4 portfolio-container">
            @foreach(var item in Model.Item1)
            {       
                <div class="col-lg-4 col-md-6 portfolio-item wow fadeInUp" data-wow-delay="0.3s">
                    <div class="rounded overflow-hidden">
                        <div class="position-relative overflow-hidden">
                            <img class="img-fluid w-100" src="@Url.Content("~/Images/" + item.ImagePath)" alt="">
                            <div class="portfolio-overlay">
                                <a class="btn btn-square btn-outline-light mx-1" href="@Url.Content("~/Images/"+ item.ImagePath)" data-lightbox="portfolio"><i class="fa fa-eye"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<!--Start small information (small icon) -->

    <div class="container-xxl py-5 container-fluid bg-light">
        <div class="container">
            <div class="row g-5">
            @foreach(var item in hallInfo)
            {  
                <div class="col-md-6 col-lg-3 wow fadeIn" data-wow-delay="0.1s">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <div class="d-flex align-items-center justify-content-center">
                            <i class="bi bi-currency-dollar fa-2x text-primary"></i>
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-currency-dollar fa-2x text-primary" viewBox="0 0 16 16">
                              <path d="M4 10.781c.148 1.667 1.513 2.85 3.591 3.003V15h1.043v-1.216c2.27-.179 3.678-1.438 3.678-3.3 0-1.59-.947-2.51-2.956-3.028l-.722-.187V3.467c1.122.11 1.879.714 2.07 1.616h1.47c-.166-1.6-1.54-2.748-3.54-2.875V1H7.591v1.233c-1.939.23-3.27 1.472-3.27 3.156 0 1.454.966 2.483 2.661 2.917l.61.162v4.031c-1.149-.17-1.94-.8-2.131-1.718H4zm3.391-3.836c-1.043-.263-1.6-.825-1.6-1.616 0-.944.704-1.641 1.8-1.828v3.495l-.2-.05zm1.591 1.872c1.287.323 1.852.859 1.852 1.769 0 1.097-.826 1.828-2.2 1.939V8.73l.348.086z"/>
                            </svg>
                            @item.Price 
                        </div>
                   </div>
                </div>
                <div class="col-md-6 col-lg-3 wow fadeIn" data-wow-delay="0.3s">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <div class="d-flex align-items-center justify-content-center ">
                            <i class="bi bi-people-fill fa-2x text-primary"></i>
                            @item.Capacity
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 wow fadeIn" data-wow-delay="0.5s">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <div class="d-flex align-items-center justify-content-center ">
                            <i class="bi bi-geo-alt-fill fa-2x text-primary"></i>
                            @item.Location
                        </div>
                    </div>
                </div>

                    <div class="col-md-6 col-lg-3 wow fadeIn" data-wow-delay="0.5s">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <div class="d-flex align-items-center justify-content-center ">

                                @if (User.Identity.IsAuthenticated)
                                {
                                <a asp-controller="HallBookings" asp-action="Create" asp-route-id="@item.Id" class="nav-item nav-link" style="background-color: #7aa76d; color: white;">Book Now</a>
                                }else
                                {
                                    <button onclick="avgrund.activate( 'stack' );">
                                        Book Now
                                    </button>
                                }

                                <aside class="avgrund-popup text-center">
                                    <h2 class="mt-5">You Have TO Login First</h2>
                                    <a asp-action="LoginIn" asp-controller="LoginAndRegistration" class="nav-item nav-link log">
                                        Login
                                    </a>
                                    <button onclick="avgrund.deactivate();" class="closePopup"> X </button>
                                </aside>
                            </div>
                    </div>
                </div>
            }
            </div>
        </div>
    </div>

<!--End small information (small icon) -->

<!-- Start descrption & information & Features -->
    <div class="container-fluid bg-light overflow-hidden my-5 px-lg-0">
        <div class="container feature px-lg-0">
            <div class="row g-0 mx-lg-0">
                <div class="col-lg-6 feature-text py-5 wow fadeIn" data-wow-delay="0.5s">
                    <div class="p-lg-5 ps-lg-0">
                        <div class="section-title text-start">
                            <h2 class="display-5 mb-4">Description</h2>
                            @foreach(var item in hallInfo)
                            {
                                <p class="mb-4 pb-2">@item.Description</p>
                                <h3 class="mb-4 pb-2">Times Available :</h3>
                                <p class="mb-4 pb-2">@item.Interval1</p>
                                <p class="mb-4 pb-2">@item.Interval2</p>
                                <p class="mb-4 pb-2">@item.Interval3</p>
                                <p class="mb-4 pb-2">@item.Interval4</p>
                            }
                        </div>
                    </div>
                </div>
            <!--Start Feature-->
                <div class="col-lg-6 feature-text py-5 wow fadeIn" data-wow-delay="0.5s">
                    <div class="p-lg-5 ps-lg-0">
                        <div class="section-title text-start">
                            <h2 class="display-5 mb-4">Hall Features</h2>
                            <div class="row g-4">
                                <div class="col-6">
                                    @foreach(var item in Model.Item2)
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="d-flex flex-shrink-0 align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                                <i class="fa fa-check fa-1x text-primary"></i>
                                            </div>
                                            <div class="ms-4">
                                                <p class="mb-2">@item.Feat</p>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                     </div>
                 </div>
                <!--End Feature-->
             </div>
         </div>
    </div>

<!-- End descrption & information & Features  -->

@foreach(var item in hallInfo)
{
    <div class="col-lg-6 pe-lg-0 mr-5" style="min-height: 400px;">
         <div class="position-relative h-100 top-50">
             <iframe class=" w-100 "  style="object-fit: cover;"
                    src= "@item.Map"  
                  height="500"  allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade">
             </iframe>
        </div>
    </div>
}

   <script src="~/js/Popup.js"></script>

    </body>
</html>
