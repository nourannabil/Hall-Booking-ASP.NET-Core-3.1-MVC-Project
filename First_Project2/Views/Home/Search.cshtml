@model IEnumerable<First_Project2.Models.Hall>
@{
    ViewData["Title"] = "HallMenuHome";
    Layout = "~/Views/Shared/_TemplateLayout.cshtml";
    var Desc = ViewBag.desc;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Woody - Carpenter Website Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="~/Assests/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500&family=Roboto:wght@500;700;900&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/Assests/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/Assests/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/Assests/lib/lightbox/css/lightbox.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/Assests/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/Assests/css/style.css" rel="stylesheet">

    <!-- the Editing Css StyleSheet -->
    <link href="~/Assests/css/Editings.css" rel="stylesheet">

    <style>
        .page-header {
            background: linear-gradient(rgba(53, 53, 53, .7), rgba(53, 53, 53, .7)), url(../../Assests/img/MyImages/Slider2.jpg) center center no-repeat;
            background-size: cover;
        }
        .noResult{
            text-align: center;
            background-color: #9e9e9e26;
            width: 300px!important;
            padding: 20px;
            position:relative!important;
            left:32%;
        }
    </style>
</head>

<body>
    <!-- Page Header Start -->
    <div class="container-fluid page-header py-5 mb-5">
        <div class="container py-5">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Search</h1>
        </div>
    </div>
    <!-- Page Header End -->

    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center mt-5 offset-lg-3">
                <form id="formSearch" method="post">
                    <div class="row" id="SearchBox">
                        <div class="col-md-1">Hall Name</div>
                        <div class="col-md-2">
                            <input type="text" value="@ViewBag.Name" id="hallName" name="hallName" placeholder="hall name" />
                        </div>
                        <div class="col-md-1 "></div>
                    </div>
                    <div class="row mt-3" id="SearchBox">
                        <div class="col-md-1">Location</div>
                        <div class="col-md-2">
                            <input type="text" value="@ViewBag.Location" id="location" name="location"
                                   placeholder="location" />
                        </div>
                        <div class="col-md-1 ">
                            <input type="submit" id="submitsearch" value="Search" style="background-color: #3569a9;color: white;border-color: #3569a9;" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>




    <!-- HallMenu Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="section-title text-center">
            </div>
            <div class="row g-4 mt-4">
                @if (Model.Count() == 0)
                {
                    <p class="noResult"> No Result Matches </p>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        @await Html.PartialAsync("_HallMenuPartialView",item ,new ViewDataDictionary(ViewData){{"controller", "Home"},{"action","HallInformationHome"},{"route-id" , @item.Id}})
                    }
                }
            </div>
        </div>
    </div>

    <!-- HallMenu End -->
</body>

</html>


