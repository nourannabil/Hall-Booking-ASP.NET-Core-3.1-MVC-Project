
@model First_Project2.Models.Hall

@{
ViewData["Title"] = "Create";
Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<h4>Hall</h4>
<hr />

<div class="content ">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title m-5">Hall Create</h4>
                </div>
                <div class=" card-body text-center">
                    <div class="container">
                        <form asp-action="Create" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-4 text-dark">
                                    <div class="form-group">
                                        <label asp-for="CategoryId" class="control-label text-dark">Category Name</label>
                                        <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Name" class="control-label text-dark"></label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Description" class="control-label text-dark"></label>
                                        <textarea asp-for="Description" class="form-control" ></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Capacity" class="control-label text-dark"></label>
                                        <input asp-for="Capacity" class="form-control" />
                                        <span asp-validation-for="Capacity" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Price" class="control-label text-dark"></label>
                                        <input asp-for="Price" class="form-control" />
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4 text-dark">
                                    <div class="form-group">
                                        <label asp-for="Interval1" class="control-label text-dark"></label>
                                        <input asp-for="Interval1" class="form-control" />
                                        <span asp-validation-for="Interval1" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Interval2" class="control-label text-dark"></label>
                                        <input asp-for="Interval2" class="form-control" />
                                        <span asp-validation-for="Interval2" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Interval3" class="control-label text-dark"></label>
                                        <input asp-for="Interval3" class="form-control" />
                                        <span asp-validation-for="Interval3" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Interval4" class="control-label text-dark"></label>
                                        <input asp-for="Interval4" class="form-control" />
                                        <span asp-validation-for="Interval4" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Location" class="control-label text-dark"></label>
                                        <input asp-for="Location" class="form-control" />
                                        <span asp-validation-for="Location" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Map" class="control-label text-dark"></label>
                                        <input asp-for="Map" class="form-control" />
                                        <span asp-validation-for="Map" class="text-danger"></span>
                                    </div>
                                </div>
                                   
                                <div class="col-md-4 mt-5 mb-5 text-center">
                                    <h5 asp-for="ImageFile" class="control-label text-center mb-4 "> upload Image </h5>
                                    <div class="upload-options text-center">
                                        <input asp-for="ImageFile" type="file" class="image-upload" accept="image/*" />
                                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mt-5">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="text-left m-5">
                    <a class="btn btn-info btn-icon btn-sm w-auto p-2 text-dark" asp-action="Index">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>