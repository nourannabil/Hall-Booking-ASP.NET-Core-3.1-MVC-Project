@model First_Project2.Models.Card

@{
ViewData["Title"] = "Delete";
var card = ViewBag.cardDetails;
Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Delete Card</h1>
<hr/>
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title m-5">Are you sure you want to delete this?</h4>
                </div>
                <div class="card-body">
                    <div class="row offset-2">
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.CardNumber)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.CardNumber)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.NameOnCard)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.NameOnCard)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Cvv)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Cvv)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Balance)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Balance)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.CardType)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.CardType)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ExpiryDate)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ExpiryDate)
                            </dd>
                        </dl>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Delete" class="btn btn-danger " />
                        </form>
                    </div>
                    <div class="float-start">
                        <a class="btn btn-info btn-icon btn-sm w-auto p-2 text-dark" asp-action="Users"
                            asp-controller="Dashboard">
                            Back To My Profile
                        </a>
                        <a class="btn btn-success btn-icon btn-sm w-auto p-2 text-dark" asp-action="Details"
                            asp-route-id="@Model.UserId">
                            Back To My Card
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>