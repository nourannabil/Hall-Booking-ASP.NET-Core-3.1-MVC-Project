@model First_Project2.Models.Card

@{
    ViewData["Title"] = "Details";
    var card = ViewBag.cardDetails;
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title m-5">card Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row offset-3">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CardNumber)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CardNumber)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Cvv)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Cvv)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ExpiryDate)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ExpiryDate)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.NameOnCard)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NameOnCard)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Balance)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Balance) $
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CardType)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CardType)
                        </dd>
                    </dl>
                </div>
                <div class="text-left m-5">
                    <a class="btn btn-info btn-icon btn-sm w-auto p-2 text-dark" asp-action="Index"
                        asp-route-id=@Model.UserId>
                        Back To My Cards
                    </a>
                    <a class="btn btn-success btn-icon btn-sm " asp-action="Edit" asp-route-id=@Model.Id>
                        <i class="fa fa-edit" style="font-size:15px"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>