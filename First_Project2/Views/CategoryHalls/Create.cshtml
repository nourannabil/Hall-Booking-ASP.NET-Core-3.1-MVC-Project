@model First_Project2.Models.CategoryHall

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<h4>Category Hall</h4>

<hr />

<div class="content ">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title m-5">Category Hall Create</h4>
                </div>
                <div class=" card-body text-center">
                    <div class="container">
                        <form asp-action="Create" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-5 text-dark">
                                    <div class="form-group">
                                        <label asp-for="CategoryName" class="control-label"></label>
                                        <input asp-for="CategoryName" class="form-control" />
                                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-5 mt-5 mb-5 text-center">
                                    <h5 asp-for="ImageFile" class="control-label text-center mb-4 "> upload Image </h5>
                                    <div class="upload-options">
                                        <input asp-for="ImageFile" type="file" class="image-upload" accept="image/*" />
                                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mt-5">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="text-left m-5">
                    <a class="btn btn-info btn-icon btn-sm w-auto p-2 text-dark" asp-action="Index">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>