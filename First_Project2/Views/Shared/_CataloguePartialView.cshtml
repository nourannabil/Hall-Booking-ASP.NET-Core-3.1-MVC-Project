@model First_Project2.Models.CategoryHall


<div class="col-md-6 col-lg-4 wow fadeInUp" data-wow-delay="0.1s">
    <div class="service-item">
        <div class="overflow-hidden">
            <img class="img-fluid" src=@Url.Content("~/Images/"+ Model.ImagePath) alt="@Model.CategoryName">
        </div>
        <div class="p-4 text-center border border-5 border-light border-top-0">
            <h4 class="mb-3">@Model.CategoryName</h4>
            <a href="/@ViewData["controller"]/@ViewData["action"]/@ViewData["route-id"]" class="fw-medium"> See Halls <i class="fa fa-arrow-right ms-2"></i></a>
        </div>
    </div>
</div>

